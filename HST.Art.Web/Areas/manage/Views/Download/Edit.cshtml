                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.FileImg, null, new { @class = "error-lable" })
                @Html.TextBoxFor(m => m.FileImg, new { id = "downFileImg", @class = "hide-area input-text" })
            </div>
        </div>
